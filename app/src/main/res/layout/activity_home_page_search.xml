<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.HomePageSearchActivity"
    android:orientation="vertical">

    <!-- TODO: bisogna aggiungere il riquadro in alto (nome e dove) e bisogna aggiungere l'icona vicino a Posizione Attuale-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_current_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_position"
            android:textColor="#579441"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textview_what"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/what"
            android:textColor="@android:color/black" />

        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radiobutton_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/radiobutton_attractions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attractions" />

            <RadioButton
                android:id="@+id/radiobutton_hotels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hotel" />

            <RadioButton
                android:id="@+id/radiobutton_restaurants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/restaurant" />

        </RadioGroup>

        <TextView
            android:id="@+id/textview_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/price_any"
            android:textColor="@android:color/black" />

        <SeekBar
            android:id="@+id/seekbar_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumbTint="@color/colorPrimaryDark"
            android:max="500"/>

        <TextView
            android:id="@+id/textview_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/distance_any"
            android:thumbTint="@color/colorPrimaryDark"
            android:textColor="@android:color/black" />

        <SeekBar
            android:id="@+id/seekbar_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumbTint="@color/colorPrimaryDark"
            android:max="50"/>

        <TextView
            android:id="@+id/textview_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/rank_any"
            android:textColor="@android:color/black" />

        <SeekBar
            android:id="@+id/seekbar_rank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"
            android:thumbTint="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/button_see_results"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/see_results_button"
            android:drawableStart="@drawable/icon_search_white"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="50dp"
            android:text="@string/ree_results"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>


</RelativeLayout>