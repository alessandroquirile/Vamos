<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.RestaurantMapActivity">

    <fragment
        android:id="@+id/restaurant_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.RestaurantMapActivity" />

    <LinearLayout
        android:id="@+id/linear_layout_search_restaurants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/search_background"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2">

        <ImageView
            android:id="@+id/image_view_restaurant_map_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/icon_back_arrow_black" />

        <TextView
            android:id="@+id/text_view_search_restaurants_on_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_weight="1.8"
            style="@style/TextAppearance.AppCompat.Medium"
            android:drawableEnd="@drawable/icon_filter_black"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="@string/search"
            android:gravity="center_vertical"/>

        <!-- <ImageView
            android:id="@+id/image_view_hotel_map_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/icon_filter_black" /> -->

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button_center_position_on_restaurants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_search_restaurants"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/icon_center_result_map_black"
        app:backgroundTint="@color/white"
        app:fabSize="mini"
        app:rippleColor="@color/lightGrey" />

    <RelativeLayout
        android:id="@+id/relative_layout_restaurant_details"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/search_background"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/image_view_restaurant"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:orientation="vertical"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/text_view_restaurant_map_name"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/text_view_restaurant_map_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:drawablePadding="5dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:drawableStart="@drawable/icon_star_yellow"/>

                <TextView
                    android:id="@+id/text_view_restaurant_map_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>